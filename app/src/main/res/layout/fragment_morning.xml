<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.alarmproject.alarm.BannerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Primary_700"
        tools:context=".alarm.AlarmFragment">


        <androidx.cardview.widget.CardView
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="24dp"
            app:cardCornerRadius="47dp"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:background="@color/object_700"
                android:src="@drawable/sun_big" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/moonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:background="#00000000"
            android:src="@drawable/sun"
            app:layout_constraintBottom_toBottomOf="@id/wakeupText1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/wakeupText1" />

        <TextView
            android:id="@+id/wakeupText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/notosanskrm"
            android:includeFontPadding="false"
            android:text="일어날 시간"
            android:textColor="@color/object_700"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/moonIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bannerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosanskrm"
            android:includeFontPadding="false"
            android:text="@{viewModel.bannerText}"
            android:textColor="@color/object_700"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wakeupText1" />

        <LinearLayout
            android:id="@+id/morningAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_background_white_600_1"
            android:elevation="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="20dp"
            android:paddingBottom="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerText">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrm"
                android:includeFontPadding="false"
                android:text="새로운 알람"
                android:textColor="@color/object_700"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/plus_icon_black_700" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/line_round_background_white_600"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/morningAddButton">

            <TextView
                android:id="@+id/wakeupText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanskrm"
                android:includeFontPadding="false"
                android:text="기상"
                android:textColor="@color/object_700"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wakeupTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/notosanskrm"
                android:includeFontPadding="false"
                android:text="06:00"
                android:textColor="@color/object_700"
                android:textSize="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wakeupText2" />

            <TextView
                android:id="@+id/morningBedTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/notosanskrm"
                android:includeFontPadding="false"
                android:text="12:00"
                android:textColor="@color/object_700"
                android:textSize="35sp"
                app:layout_constraintBottom_toBottomOf="@id/wakeupTimeText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/wakeupTimeText"
                app:layout_constraintTop_toTopOf="@id/wakeupTimeText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrm"
                android:includeFontPadding="false"
                android:text="취침"
                android:textColor="@color/object_700"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/morningBedTimeText"
                app:layout_constraintStart_toStartOf="@id/morningBedTimeText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wakeupTimeText"
                app:layout_constraintVertical_bias="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskrm"
                    android:includeFontPadding="false"
                    android:text="S"
                    android:textColor="#939393"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/notosanskrm"
                    android:includeFontPadding="false"
                    android:text="M"
                    android:textColor="#939393"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/notosanskrm"
                    android:includeFontPadding="false"
                    android:text="T"
                    android:textColor="#939393"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/notosanskrm"
                    android:includeFontPadding="false"
                    android:text="W"
                    android:textColor="#939393"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/notosanskrm"
                    android:includeFontPadding="false"
                    android:text="T"
                    android:textColor="#939393"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/notosanskrm"
                    android:includeFontPadding="false"
                    android:text="F"
                    android:textColor="#939393"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/notosanskrm"
                    android:includeFontPadding="false"
                    android:text="S"
                    android:textColor="#939393"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/morningSleepText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/notosanskrm"
                android:includeFontPadding="false"
                android:text="수면 시간"
                android:textColor="@color/object_700"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/morningBedTimeText"
                app:layout_constraintTop_toBottomOf="@id/morningBedTimeText" />


            <TextView
                android:id="@+id/morningSleepTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/notosanskrm"
                android:includeFontPadding="false"
                android:text="0시간"
                android:textColor="@color/object_700"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/morningSleepText"
                app:layout_constraintTop_toBottomOf="@id/morningSleepText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            tools:listitem="@layout/item_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>